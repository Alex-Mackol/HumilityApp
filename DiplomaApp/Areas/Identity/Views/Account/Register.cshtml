@using DiplomaApp.Areas.Identity.Models
@model RegisterViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
 @{
     Layout = "_Layout";
 }

  <form method="post">
           
            <br />
                        <div class="form-group">
                            <label>Username</label>
                            @Html.TextBoxFor(x => x.Username, new { @class = "form-control"})
                        </div>
                        <br />
                        <div class="form-group">
                            <label>Email</label>
                             @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @type = "email", @placeholder = "sssss@gmail.com"})
                        </div>
                        <br />
                        <div class="form-group">
                            <label>FirstName</label>
                            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", @placeholder = "Bob"})
                        </div>
                        <br />
                        <div class="form-group">
                            <label>LastName</label>
                           @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", @placeholder = "Martin"})
                        </div>
                        <br />
                        <div class="form-group">
                            <label>PhoneNumber</label>
                            @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control", @type = "tel"})
                        </div>

                        <br />
                        <div class="form-group">

                            @Html.DropDownListFor(m => m.RoleName, new List<SelectListItem>
                                  { new SelectListItem{Text="Refugee", Value="Refugee"},
                                      new SelectListItem{Text="Volunteer", Value ="Volunteer"}}, "Please select", new{id="drop"})
                        </div>
                        <br />

                        <div class="form-group">
                            <label>Password</label>
                             @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password"})
                        </div>

                        <br />

           <input type="submit" value="Register" class="btn btn-success" />
   </form>

