@{
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card login-logout-tab">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <span class="nav-link">Отримати допомогу</span>
                    </li>
                </ul>
            </div>
            <div class="card-content">
                <div class="col-md-12">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <input class="form-control"  id="inpUserName"  value="@ViewBag.User"/>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Состав сім'ї</label>
                                <input type="number" min = "1" value="1" class="form-control" id="inpFamilyCount"/>
                            </div>
                        </div>
                        <br/>
                        <hr/>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-check">
                                    @foreach (var help in ViewBag.TypeList)
                                    {
                                        <p>
                                            <input class="form-check-input js-inputCheck" type="checkbox" value="@help">
                                            <label class="form-check-label">
                                                @help
                                            </label>
                                        </p>
                                    }
                                </div>
                            </div>
                        </div>
                        <br/>
                        <hr/>
                        <div class="col-md-6">
                            <input class="form-check-input" type="checkbox" id="inpAnimal">
                            <label class="form-check-label">
                                В мене э тварини
                            </label>
                        </div>
                        <button id="btnSend" type="button" class="btn btn-primary mt-10">Відправити</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>